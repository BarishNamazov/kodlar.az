---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { glossary } from "@/data/glossary";

const sortedTerms = [...glossary].sort((a, b) =>
  a.az.localeCompare(b.az, "az", { sensitivity: "base" }),
);
---

<BaseLayout
  title="Termin lüğəti"
  description="kodlar.az üçün termin lüğəti"
  currentPath="/glossary"
>
  <section class="glossary-page">
    <div class="container">
      <h1>Termin lüğəti</h1>
      <p class="subtitle">
        Məqalələrdə istifadə olunan terminlərin standart izahları.
      </p>

      <input
        id="glossary-search"
        class="search-input"
        type="search"
        placeholder="termin axtar..."
        aria-label="Termin axtar"
      />

      <dl id="glossary-list" class="glossary-dict">
        {
          sortedTerms.map((term) => (
            <div
              class="dict-entry"
              data-az={term.az.toLowerCase()}
              data-en={term.en.toLowerCase()}
              data-desc={(term.description || "").toLowerCase()}
            >
              <dt>
                <span class="dict-az">{term.az}</span>
                <span class="dict-en">{term.en}</span>
              </dt>
              <dd>
                {term.description && (
                  <span class="dict-desc">{term.description}</span>
                )}
                {term.link && (
                  <a
                    class="dict-link"
                    href={term.link}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    ↗ Mənbə
                  </a>
                )}
              </dd>
            </div>
          ))
        }
      </dl>
    </div>
  </section>
</BaseLayout>

<style>
  .container {
    max-width: 760px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .subtitle {
    margin-top: 0.5rem;
    margin-bottom: 1.25rem;
  }

  .search-input {
    width: 100%;
    padding: 0.7rem 0.85rem;
    margin-bottom: 1.25rem;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-surface);
    color: var(--color-text);
    font-family: var(--font-mono);
    font-size: 0.875rem;
  }

  .glossary-dict {
    margin: 0;
  }

  .dict-entry {
    padding: 0.65rem 0;
    border-bottom: 1px solid var(--color-border-muted);
  }

  .dict-entry:last-child {
    border-bottom: none;
  }

  .dict-entry dt {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 0.2rem;
  }

  .dict-az {
    font-weight: 600;
    font-size: 1rem;
    color: var(--color-text);
  }

  .dict-en {
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    color: var(--color-cyan);
  }

  .dict-entry dd {
    margin: 0;
    padding-left: 0;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    line-height: 1.5;
  }

  .dict-desc {
    margin-right: 0.5rem;
  }

  .dict-link {
    font-size: 0.8125rem;
    white-space: nowrap;
  }
</style>

<script>
  const search = document.getElementById("glossary-search");
  const entries = document.querySelectorAll(".dict-entry");

  search?.addEventListener("input", (event) => {
    const query = (event.target as HTMLInputElement).value.toLowerCase().trim();

    entries.forEach((item) => {
      const az = item.getAttribute("data-az") || "";
      const en = item.getAttribute("data-en") || "";
      const desc = item.getAttribute("data-desc") || "";
      const visible =
        !query ||
        az.includes(query) ||
        en.includes(query) ||
        desc.includes(query);

      (item as HTMLElement).style.display = visible ? "" : "none";
    });
  });
</script>
